<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFBDE"
     >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/icon_redground"
        android:padding="@dimen/top_padding" >

        <TextView
            android:id="@+id/tv_setting_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="註冊資料"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relativeLayout1" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/relativeLayout1"
            
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

           

                



                        


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp" >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/icon_setting_bigbig"
                        android:padding="5dp" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:orientation="vertical" >

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="10dp" >

                                <TextView
                                    android:id="@+id/tv_setting_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:text="姓名      "
                                    android:textAppearance="?android:attr/textAppearanceMedium" />
                              <LinearLayout android:layout_width="0px"
                                  android:layout_height="0px"
                                  android:focusable="true"
                                  android:focusableInTouchMode="true"></LinearLayout>

                                <EditText
                                    android:id="@+id/et_setting_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_toRightOf="@+id/tv_setting_name"
                                    android:ems="10" >

                                </EditText>
                            </RelativeLayout>

                            <ImageView
                                android:id="@+id/ImageView02"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:src="@drawable/shape_greyline" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="10dp" >

                                <TextView
                                    android:id="@+id/tv_setting_sex"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:text="性別"
                                    android:textAppearance="?android:attr/textAppearanceMedium" />

                                <RadioGroup
                                    android:id="@+id/radioGroup1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentTop="true"
                                    android:layout_alignParentRight="true"
                                    android:orientation="horizontal"
                                    >

                                    <RadioButton
                                        android:id="@+id/setting_radio_male"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:checked="true"
                                        android:text="男" />

                                    <RadioButton
                                        android:id="@+id/setting_radio_female"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="女" />

                                </RadioGroup>

                            </RelativeLayout>

                            <ImageView
                                android:id="@+id/ImageView01"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:src="@drawable/shape_greyline" />
    <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="10dp" >

                                <TextView
                                    android:id="@+id/tv_setting_notice"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:text="是否接收通知"
                                    android:textAppearance="?android:attr/textAppearanceMedium" />

                                <RadioGroup
                                    android:id="@+id/radioGroupnotice1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentTop="true"
                                    android:layout_alignParentRight="true"
                                    android:orientation="horizontal"
                                    >

                                    <RadioButton
                                        android:id="@+id/setting_radio_1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:checked="true"
                                        android:text="接收" />

                                    <RadioButton
                                        android:id="@+id/setting_radio_2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="不接收" />

                                </RadioGroup>

                            </RelativeLayout>

                            <ImageView
                                android:id="@+id/ImageView05"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:src="@drawable/shape_greyline" />
                            
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="10dp" >

                                <TextView
                                    android:id="@+id/tv_setting_birthday"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:text="出生日期"
                                    android:textAppearance="?android:attr/textAppearanceMedium" />

                                <TextView
                                    android:id="@+id/et_setting_date"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_toRightOf="@+id/tv_setting_birthday"
                                    android:paddingLeft="10dp" >

                                </TextView>
                            </RelativeLayout>

                            <ImageView
                                android:id="@+id/ImageView03"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:src="@drawable/shape_greyline" />


                                <TextView
                                    android:id="@+id/tv_setting_bloodtype"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:text="血型"
                                     android:textAppearance="?android:attr/textAppearanceMedium" 
                                    />
                                <RadioGroup
                                    android:id="@+id/radioGroup2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentTop="true"
                                    android:layout_alignParentRight="true"
                                    android:orientation="horizontal"
                                    >

                                    <RadioButton
                                        android:id="@+id/radio_A"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:checked="true"
                                        android:text="A" />

                                    <RadioButton
                                        android:id="@+id/radio_B"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="B" />
                                    <RadioButton
                                        android:id="@+id/radio_AB"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="AB" />
                                    <RadioButton
                                        android:id="@+id/radio_O"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="O" />

                                </RadioGroup>
                        </LinearLayout>
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" 
                    android:layout_marginBottom="40dp"
                    >

                    <Button
                        android:id="@+id/btn_setting_save"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/shape_button_save"
                       android:textColor="@color/white"   
                        android:text="确定" />

                </RelativeLayout>

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>