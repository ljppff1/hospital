<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:wison="http://schemas.android.com/apk/res/com.webdesign688.redcross"
    xmlns:android="http://schemas.android.com/apk/res/android"    
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFBDE"
    tools:context=".Setting" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/icon_redground"
        android:padding="@dimen/top_padding" >

        <TextView
            android:id="@+id/tv_setting_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="設定"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relativeLayout1" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/relativeLayout1"
            
            android:orientation="vertical" >

           <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp" >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/icon_setting_small" >

                        <TextView
                            android:id="@+id/tv_setting_notify"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:paddingLeft="20dp"
                            android:text="通知"
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                        
                        
                        
                        <com.james.hk_redcross.util.MySwitch
                            android:id="@+id/mySwitch1"
                            android:layout_width="80dp"
                            android:layout_height="30dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:layout_centerVertical="true"
                            android:clickable="true"
                          wison:switchMinHeight="30dp"
                    wison:switchMinWidth="80dp"
            wison:thumb="@drawable/switch_thumb_button"
            wison:thumbTextPadding="20dp"
            wison:trackOff="@drawable/switch_track_off_button"
            wison:trackOn="@drawable/switch_track_on_button" 
                            />

                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp" >

                    <TextView
                        android:id="@+id/tv_setting_language"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="語言"
                        android:textAppearance="?android:attr/textAppearanceMedium" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp" >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/icon_setting_big"
                        android:padding="5dp" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:orientation="vertical" >

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="10dp" >

                                <TextView
                                    android:id="@+id/textViewC"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:text="English"
                                    android:textAppearance="?android:attr/textAppearanceMedium" />

                                <CheckBox
                                    android:id="@+id/checkBox_language_en"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true" />
                            </RelativeLayout>

                            <ImageView
                                android:id="@+id/imageView1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:src="@drawable/shape_greyline" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="10dp" >

                                <TextView
                                    android:id="@+id/textView4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:text="中文"
                                    android:textAppearance="?android:attr/textAppearanceMedium" />

                                <CheckBox
                                    android:id="@+id/checkBox_language_cn"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true" />
                            </RelativeLayout>
                        </LinearLayout>
                    </RelativeLayout>
                </RelativeLayout>
                              <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:paddingLeft="15dp" >

                <Button
                    android:id="@+id/share_myfrist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:background="@color/special"
                    android:textColor="@color/white"
                    android:text="分享" />

               </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp" >

                    <TextView
                        android:id="@+id/tv_setting_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="個人資料(可不輸入)"
                        android:textAppearance="?android:attr/textAppearanceMedium" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp" >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/icon_setting_bigbig"
                        android:padding="5dp" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:orientation="vertical" >

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="10dp" >

                                <TextView
                                    android:id="@+id/tv_setting_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:text="姓名      "
                                    android:textAppearance="?android:attr/textAppearanceMedium" />
                              <LinearLayout android:layout_width="0px"
                                  android:layout_height="0px"
                                  android:focusable="true"
                                  android:focusableInTouchMode="true"></LinearLayout>

                                <EditText
                                    android:id="@+id/et_setting_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_toRightOf="@+id/tv_setting_name"
                                    android:ems="10" >

                                </EditText>
                            </RelativeLayout>

                            <ImageView
                                android:id="@+id/ImageView02"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:src="@drawable/shape_greyline" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="10dp" >

                                <TextView
                                    android:id="@+id/tv_setting_sex"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:text="性別"
                                    android:textAppearance="?android:attr/textAppearanceMedium" />

                                <RadioGroup
                                    android:id="@+id/radioGroup1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentTop="true"
                                    android:layout_alignParentRight="true"
                                    android:orientation="horizontal"
                                    >

                                    <RadioButton
                                        android:id="@+id/setting_radio_male"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:checked="true"
                                        android:text="男" />

                                    <RadioButton
                                        android:id="@+id/setting_radio_female"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="女" />

                                </RadioGroup>

                            </RelativeLayout>

                            <ImageView
                                android:id="@+id/ImageView01"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:src="@drawable/shape_greyline" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="10dp" >

                                <TextView
                                    android:id="@+id/tv_setting_birthday"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:text="出生日期"
                                    android:textAppearance="?android:attr/textAppearanceMedium" />

                                <EditText
                                    android:id="@+id/et_setting_date"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_toRightOf="@+id/tv_setting_birthday"
                                    android:ems="10"
                                    android:hint="DD／MM／YYYY"
                                    android:inputType="date"
                                    android:paddingLeft="10dp" >

                                </EditText>
                            </RelativeLayout>
                            
                            <ImageView
                                android:id="@+id/ImageView03"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:src="@drawable/shape_greyline" />

                       <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="10dp" >
                            
                                <TextView
                                    android:id="@+id/tv_setting_bloodtype"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:text="血型"
                                     android:textAppearance="?android:attr/textAppearanceMedium" 
                                    />
                                <RadioGroup
                                    android:layout_below="@id/tv_setting_bloodtype"
                                    android:id="@+id/radioGroup2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentTop="true"
                                    android:layout_alignParentRight="true"
                                    android:orientation="horizontal"
                                    >

                                    <RadioButton
                                        android:id="@+id/radio_A"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:checked="true"
                                        android:text="A" />

                                    <RadioButton
                                        android:id="@+id/radio_B"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="B" />
                                    <RadioButton
                                        android:id="@+id/radio_AB"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="AB" />
                                    <RadioButton
                                        android:id="@+id/radio_O"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="O" />

                                </RadioGroup>
                                </RelativeLayout>
                                
                                
                        </LinearLayout>
                        
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" 
                    android:layout_marginBottom="40dp"
                    >

                    <Button
                        android:id="@+id/btn_setting_save"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:onClick="btn_save"
                        android:background="@drawable/shape_button_save"
                       android:textColor="@color/white"   
                        android:text="保存" />

                </RelativeLayout>

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>